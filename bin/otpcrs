#!/usr/bin/env python3
# This file is placed in the Public Domain.


"service"


import getpass
import os
import sys


sys.path.insert(0, os.getcwd())


from otpcr.config  import Config
from otpcr.command import parse
from otpcr.main    import forever, pidfile, privileges, wrap
from otpcr.runtime import errors


if os.path.exists('mods'):
    from mods import face as MODS
else:
    MODS = None


def main():
    "main"
    mods = ",".join(modnames(MODS))
    user = getpass.getuser()
    privileges(user)
    pidfile(Config.pidfile)
    for mod in scanner(mods, MODS):
        if "init" in dir(mod):
            mod.init()
    forever()


if __name__ == "__main__":
    wrap(main, print)
    errors(print)
