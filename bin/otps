#!/usr/bin/env python3
# This file is placed in the Public Domain.


"service"


import getpass
import os
import sys


sys.path.insert(0, os.getcwd())


from otp.config  import Config
from otp.command import parse
from otp.main    import forever, pidfile, privileges, wrap
from otp.runtime import errors


if os.path.exists('mods'):
    from mods import face as MODS
else:
    MODS = None


def main():
    "main"
    parse(Config, " ".join(sys.argv[1:]))
    Config.mod = ",".join(modnames(MODS))
    Config.user = getpass.getuser()
    privileges(Config.user)
    pidfile(Config.pidfile)
    for mod in scanner(Config.mod, MODS):
        if "init" in dir(mod):
            mod.init()
    forever()


if __name__ == "__main__":
    wrap(main, print)
    errors(print)
