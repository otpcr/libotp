#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=R,C0413


"main program"


import getpass
import os
import readline
import sys


sys.path.insert(0, os.getcwd())


from otp.command import Event, command, parse
from otp.modules import face
from otp.object  import Config 
from otp.runtime import Client, errors


MODS = None


if os.path.exists("mods"):
     from mods import face as MODS


cfg = Config()


class CLI(Client):

    "CLI"

    def raw(self, txt):
        "print text."
        print(txt)


def main():
    "main"
    parse(cfg, " ".join(sys.argv[1:]))
    if not cfg.txt:
        return None
    cli = CLI()
    evt = Event()
    evt.orig = repr(cli)
    evt.txt = cfg.txt
    command(cli, evt)


if __name__ == "__main__":
    main()
    errors(print)
